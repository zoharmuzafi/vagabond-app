<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1 class="text-center">New post</h1>
      <hr>
      <%= form_for [@city, @post] do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control", placeholder: "Enter a title", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_field :body, class: "form-control", placeholder: "Describe your experience" %>
        </div>
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-block btn-info" %>
      <% end %>
    </div>
  </div>
</div>